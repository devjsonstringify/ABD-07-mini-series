// Online C++ compiler to run C++ program online
#include <iostream>

int celsiusToFahrenheit(int value){
    int result;
    result = (value * 9/5) + 32;
    return result;
}

int fahrenheitToCelsius(int value){
    int result;
    result = (value - 32) * 5/9;
    return result;
}

int main() {
    int temperature;
    char getUserUnit = 'f';

   std::cout << "Unit conversion celsius to fahrenheit vice-versa \n";
   std::cout << "What's the unit? [f/c]: ";
   std::cin >> getUserUnit;
   std::cout << "What's the temperature?: ";
   std::cin >> temperature;
    
    if(getUserUnit == 'c'){
         std::cout << "Conversation: Celsius to Fahrenheit: " << fahrenheitToCelsius (temperature) << std::endl;
         return 0;
    }
    std::cout << "Conversion: Fahrenheit to Celsius: " << celsiusToFahrenheit(temperature) << std::endl;
    
    return 0;
}
